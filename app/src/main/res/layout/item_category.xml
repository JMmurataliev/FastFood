<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:background="@drawable/bg_ramka"
        android:id="@+id/chicken_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chicken_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/chiken"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/chicken_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Chicken"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
        
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/chicken_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:text="600сом"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_ramka"
        android:id="@+id/pizza_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pizza_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pizza"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/pizza_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Pizza"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
        
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/pizza_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:text="500сом"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_ramka"
        android:id="@+id/sushi_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/sushi_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sushi_california"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/sushi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Sushi"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
        
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/sushi_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:text="800сом"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_ramka"
        android:id="@+id/dessert_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dessert_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dessert_icecream"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/dessert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Dessert"
            android:textColor="@color/text_primary"
            android:textSize="14sp" />
        
        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/dessert_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:text="150сом"
            android:layout_marginTop="5dp" />

    </LinearLayout>

</LinearLayout> 